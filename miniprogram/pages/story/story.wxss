/**story.wxss**/
.main {
  padding-bottom: 80rpx;
}

.card {
  width: 90%;
  height: 450rpx;
  display: flex;
  flex-direction: column;
  margin: 50rpx auto 0;
  border-radius: 18rpx;
  box-shadow: 0 0 18rpx #eee;
}

.card image {
  width: 100%;
  height: 300rpx;
  border-radius: 18rpx 18rpx 0 0;
}

.card .title,
.card .desc {
  font-size: 40rpx;
  padding: 15rpx 40rpx;
}

.card .desc {
  display: flex;
  padding-bottom: 40rpx;
  justify-content: space-between;
}

.listen {
  display: flex;
  font-size: 35rpx;
  line-height: 40rpx;
}

.listen image,
.share image {
  width: 40rpx;
  height: 40rpx;
}

.listen image {
  padding-right: 20rpx;
}