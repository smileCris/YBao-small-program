/* miniprogram/pages/circle/circle.wxss */

.main {
  display: flex;
  flex-direction: column;
  padding: 60rpx 0;
}

.card {
  width: 100%;
  height: 410rpx;
  margin-bottom: 60rpx;
  border-bottom: 1rpx solid #ccc;
}

.user, .title, .content, .reply {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.user {
  display: flex;
  height: 132rpx;
  align-items: center;
}

.user image {
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.title {
  max-width: 530rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.content {
  color: #555;
  height: 88rpx;
  font-size: 34rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.reply {
  display: flex;
  height: 60rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  justify-content: flex-end;
  align-items: center;
}

.reply image {
  height: 48rpx;
  width: 48rpx;
  margin-left: 20rpx;
}

.numText {
  color: #999;
  font-size: 32rpx;
  line-height: 48rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}